<Window x:Class="Lab07Demo.Customer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab07Demo"
        mc:Ignorable="d"
        Title="Gestión de Clientes" Height="480" Width="850" Background="#F6F8FA">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Encabezado con formulario de creación/edición -->
        <Border Margin="16" Padding="16" BorderBrush="#2196F3" BorderThickness="2" CornerRadius="10" Background="White" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="210"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Campo Nombre -->
                <TextBlock Text="Nombre:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Bold"/>
                <TextBox x:Name="txtName" Grid.Column="1" Width="190" Margin="0,0,8,0" />

                <!-- Campo Teléfono -->
                <TextBlock Grid.Column="3" Text="Teléfono:" VerticalAlignment="Center" Margin="0,0,8,0" FontWeight="Bold"/>
                <TextBox x:Name="txtPhone" Grid.Column="4" Width="150" Margin="0,0,8,0"/>

                <!-- Fila 2: Dirección + Botones -->
                <TextBlock Grid.Row="1" Text="Dirección:" VerticalAlignment="Center" Margin="0,12,8,0" FontWeight="Bold"/>
                <TextBox x:Name="txtAddress" Grid.Row="1" Grid.Column="1" Width="180" Margin="0,12,0,0"/>

                <StackPanel Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3"
                        Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                    <Button Name="Read" Content="Mostrar todo" Click="Read_Click" Margin="0,0,12,0" Width="110"
                            Background="#E3F2FD" Foreground="#1565C0" FontWeight="Bold" />
                    <Button x:Name="btnCreateOrUpdate" Content="Crear" Click="CreateOrUpdate_Click" Width="90"
                            Background="#BBDEFB" Foreground="#0D47A1" FontWeight="Bold" />
                    <Button x:Name="btnCancelEdit" Content="Cancelar" Click="CancelEdit_Click" Width="80"
                            Visibility="Collapsed" Margin="12,0,0,0"
                            Background="#FFCDD2" Foreground="#B71C1C" FontWeight="Bold" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Grilla de clientes -->
        <Border Grid.Row="1" Margin="16" Padding="8" Background="White" BorderBrush="#2196F3" BorderThickness="2" CornerRadius="8">
            <DataGrid x:Name="ItemsDataGrid" Margin="0"
                  AutoGenerateColumns="False"
                  SelectionMode="Single"
                  IsReadOnly="True"
                  SelectionUnit="FullRow"
                  RowBackground="#E3F2FD"
                  AlternatingRowBackground="#F6F8FA"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  FontSize="15">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding CustomerID}" Width="60"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding Name}" Width="200"/>
                    <DataGridTextColumn Header="Dirección" Binding="{Binding Address}" Width="250"/>
                    <DataGridTextColumn Header="Teléfono" Binding="{Binding Phone}" Width="120"/>
                    <!-- No mostramos Active -->
                    <DataGridTemplateColumn Header="Acciones" Width="170">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Editar" Margin="4,0" Padding="8,2" Click="Edit_Click"
                                            Background="#C8E6C9" Foreground="#1B5E20" FontWeight="Bold"/>
                                    <Button Content="Eliminar" Margin="4,0" Padding="8,2" Click="Delete_Click"
                                            Background="#FFCDD2" Foreground="#B71C1C" FontWeight="Bold"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>