<Window x:Class="Lab07Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab07Demo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Name="Read" Content="GetAll" Click="Read_Click" Margin="5"/>
        </StackPanel>
  
        <DataGrid x:Name="ItemsDataGrid"  Grid.Row="1" Margin="10"
          AutoGenerateColumns="False" 
          ItemsSource="{Binding Products}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ProductID" Binding="{Binding ProductID}" />
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Price" Binding="{Binding Price}" />
                <DataGridTextColumn Header="Stock" Binding="{Binding Stock}" />
                <!-- No agregamos Active -->
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
